<%-include('../../../partials/header.ejs');%>

<body>

    <%-include('../../../partials/navbar.ejs');%>

    <br>

    <div class="container ">

        <div class="text-center mb-4"><h3>Clientes</h3></div>

        <hr>

        <div class="card mb-4">

            <div class="card-header">
                <div class="text-center mb-0"><h4>Consulta</h4></div>
            </div>

            <div class="card-body">
  
                <form>
      
                    <div class="row">

                        <div class="col-md-2 mb-3">
                            <label>ID:</label>
                            <input type="text" class="form-control" autocomplete="nope">
                        </div>
        
                        <div class="col-md-4 mb-3">
                            <label>Nome:</label>
                            <input type="text" class="form-control" autocomplete="nope">
                        </div>

                        <div class="col-md-3 mb-3">
                            <label>Nome Fantasia:</label>
                            <input type="text" class="form-control" autocomplete="nope">
                        </div>

                        <div class="col-md-3 mb-3">
                            <label>CPF/CNPJ:</label>
                            <input type="text" class="form-control" autocomplete="nope" placeholder="000.000.000-00">
                        </div>
    
                    </div>

                    <div style="visibility: hidden">

                    </div>
    
                    <div class="row justify-content-md-end">
                      <div class="col-md-10 mb-1">
                        <input type="submit" class="btn btn-primary form-control" value="PESQUISAR">
                      </div>
                      <div class="col-md-2 mb-0">
                        <a href="/cadastros/clientes/novo" class="btn btn-success form-control">NOVO +</a>
                      </div>
                    </div>

                </form>
                
            </div>
            </div>

            <div class="text-center mb-4"><h5>Resultados de Consulta</h5></div>

            <hr>

            <div class="table-responsive">
                <table class="table table-striped table-bordered table-sm">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nome</th>
                            <th scope="col">Nome Fantasia</th>
                            <th scope="col">Telefone Principal</th>
                            <th scope="col">Cidade</th>
                            <th scope="col">CNPJ/CPF</th>
                            <th scope="col">Opções</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td scope="row">...</td>
                            <td>...</td>
                            <td>...</td>
                            <td>...</td>
                            <td>...</td>
                            <td>...</td>
                            <td>...</td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>

    
</body>

