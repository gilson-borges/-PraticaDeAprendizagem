<%-include('../../../partials/header.ejs');%>

<body>

    <%-include('../../../partials/navbar.ejs');%>

    <br>

    <div class="container">

        <div class="text-center mb-4"><h3>Valores Indexador INCC</h3></div>

        <hr>

        <form>

            <div class="card mb-4">
                <div class="card-header">
                    <h4>Cadastro/Edição</h4>
                </div>
                <div class="card-body">

                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-sm-4 mb-2">
                                    <label>Data*:</label>
                                    <input type="date" class="form-control" required>
                                </div>
                                <div class="col-sm-4 mb-2">
                                    <label>Percentual do indexador*:</label>
                                    <input type="text" class="form-control" autocomplete="nope" required>
                                </div>
                                <div class="col-sm-4 mb-2">
                                    <label>Cadastrar até(meses):</label>
                                    <input type="text" class="form-control" placeholder="Ex. 12" autocomplete="nope">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-10 mb-2">
                                    <input type="submit" class="btn btn-success btn-block" value="Salvar">
                                </div>
                                <div class="col-sm-2 mb-2">
                                    <input type="button" class="btn btn-secondary btn-block" value="Limpar">
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-sm">
                            <thead>
                                <tr>
                                    <th scope="col">Data</th>
                                    <th scope="col">Dia</th>
                                    <th scope="col">Modo de<br>Correção</th>
                                    <th scope="col">Periodicidade</th>
                                    <th scope="col">Percentual</th>
                                    <th scope="col">Acumulado<br>em % no Ano</th>
                                    <th scope="col">Acumulado<br>em % 12 meses</th>
                                    <th scope="col">Opções</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>                 
                                    <td scope="row">...</td>
                                    <td>...</td>
                                    <td>...</td>
                                    <td>...</td>
                                    <td>...</td>
                                    <td>...</td>
                                    <td>...</td>
                                    <td>...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </form>
    </div>
</body>

<%-include('../../../partials/footer.ejs');%>