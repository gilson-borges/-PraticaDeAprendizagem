<%-include('../../../partials/header.ejs');%>

<body>

    <%-include('../../../partials/navbar.ejs');%>

    <br>

    <div class="container">

        <div class="text-center mb-4"><h3>Indexador</h3></div>

        <hr>

        <form>

            <div class="card mb-4">
                <div class="card-header">
                    <h4>Informações</h4>
                </div>
                <div class="card-body">

                    <div class="form-group row">
                        <div class="col-sm-2 mb-2">
                            <label>ID:</label>
                            <input type="text" class="form-control" disabled>
                        </div>
                        <div class="col-sm-10 mb-2">
                            <label>Nome:</label>
                            <input type="text" class="form-control" autofocus="" autocomplete="nope">
                        </div>
                    </div>

                    <label>Sigla da Moeda:</label>
                    <input type="text" class="form-control" placeholder="Ex. R$">

                    <br>

                    <label>Retroatividade Receitas:</label>
                    <input type="text" class="form-control" placeholder="">

                    <br>

                    <label>Retroatividade Despesas:</label>
                    <input type="text" class="form-control" placeholder="">

                    <br>

                    <label>Modo de Correção:</label>
                    <select class="form-control">
                        <option value="" disabled selected>Selecione</option>
                        <option>Valor</option>
                        <option>Percentual</option>
                    </select>
                        
                    <br>

                    <label>Periodicidade:</label>
                    <select class="form-control">
                        <option value="" disabled selected>Selecione</option>
                        <option>Diário</option>
                        <option>Mensal</option>
                    </select>

                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-8"></div>
                <div class="col-sm-2 mb-2">
                    <input type="submit" class="btn btn-danger btn-block" value="Excluir">
                </div>
                <div class="col-sm-2">
                    <input type="submit" class="btn btn-success btn-block" value="Salvar">
                </div>
            </div>

            <br>

        </form>

    </div>
</body>

<%-include('../../../partials/footer.ejs');%>