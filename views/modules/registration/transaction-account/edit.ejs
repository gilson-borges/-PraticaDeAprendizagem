<%-include('../../../partials/header.ejs');%>

<body>

    <%-include('../../../partials/navbar.ejs');%>

    <br>

    <div class="container">

        <div class="text-center mb-4"><h3>Conta Bancária</h3></div>

        <hr>

        <form>

            <div class="card mb-4">

                <div class="card-header">
                    <h4>Informações Gerais</h4>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-md-2 mb-3">
                            <label>ID:</label>
                            <input type="text" class="form-control" disabled>
                        </div>
                        <div class="col-md-5 mb-3">
                            <label>Nome*:</label>
                            <input type="text" class="form-control" autocomplete="nope" placeholder="" required>
                        </div>
                        <div class="col-md-5 mb-3">
                            <label for="firstName">Empresa*:</label>
                            <select class="form-control" required>
                                <option value="" disabled selected>Selecione</option>
                                <option>Plena Incorporadora</option>
                                <option>Plena 03</option>
                                <option>Plena 04</option>
                            </select>
                        </div>
                    </div>
                </div>

            </div>

            <div class="card mb-4">

                <div class="card-header">
                    <h4>Cadastro Bancário</h4>
                </div>

                <div class="card-body">

                    <label for="firstName">Banco*:</label>
                    <select class="form-control" required>
                        <option value="" disabled selected>Selecione</option>
                        <option>Caixa</option>
                        <option>Bradesco</option>
                        <option>Sicredi</option>
                    </select>

                    <br>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label>Numero Agência*:</label>
                            <input type="text" class="form-control"  autocomplete="nope" placeholder="" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label>Nome Agência*:</label>
                            <input type="text" class="form-control" autocomplete="nope" placeholder="" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label>Número Conta*:</label>
                            <input type="text" class="form-control"  autocomplete="nope" placeholder="" required>
                        </div>
                        <div class="col-md-1 mb-3">
                            <label>Dígito*:</label>
                            <input type="text" class="form-control" autocomplete="nope" placeholder="" required>
                        </div>
                    </div>
                </div>

            </div>

            <div class="card mb-4">

                <div class="card-header">
                    <h4>Saldo</h4>
                </div>

                <div class="card-body">

                    <div class="row">
                        
                        <div class="col-md-6 mb-3">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Saldo Inicializado - 01/11/2021</h5>
                                </div>
                                <div class="card-body text-center">
                                    <h2>R$ 0,00</h2>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Saldo Atual Estimado - 17/11/2021</h5>
                                </div>
                                <div class="card-body text-center">
                                    <h2>R$ 56.000,00</h2>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-8"></div>
                <div class="col-sm-2 mb-2">
                    <input type="submit" class="btn btn-danger btn-block" value="Excluir">
                </div>
                <div class="col-sm-2">
                    <input type="submit" class="btn btn-success btn-block" value="Salvar">
                </div>
            </div>

        </form>
    </div>

</body>

<%-include('../../../partials/footer.ejs');%>