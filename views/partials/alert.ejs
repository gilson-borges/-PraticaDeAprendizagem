<% if(alert.success){%>
        
    <div class="alert alert-success mb-2 text-center" role="alert">
        
        <%=alert.success%>
    
        <% if(alert.description) {%>
        
            <br>
            <%=alert.description%>
        
        <%} %>

    </div>

<%} else if(alert.warning) {%>

    <div class="alert alert-warning mb-2 text-center" role="alert">
    
        <%=alert.warning%>
    
        <% if(alert.description) {%>
        
            <br>
            <%=alert.description%>
        
        <%} %>

    </div>

<%} else if(alert.danger) {%>

    <div class="alert alert-danger mb-2 text-center" role="alert">
        
        <%=alert.danger%>

        <% if(alert.description) {%>
        
            <br>
            <%=alert.description%>
        
        <%} %>

    </div>

<%} %>